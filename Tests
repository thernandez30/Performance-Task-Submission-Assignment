# Bakery Menu with Prices
menu = {
    "croissant": 3.50,
    "muffin": 2.50,
    "bread": 4.00,
    "cake": 15.00
}

order_total = 0
items_ordered = []

print("--- Welcome to the Bakery ---")
print("Menu: Croissant ($3.50), Muffin ($2.50), Bread ($4.00), Cake ($15.00)")
print("Type 'done' when finished.")

# Loop until user is finished
while True:
    item = input("Add item to order: ").lower().strip()
    
    if item == 'done':
        break
    
    # Check if item exists in menu
    if item in menu:
        price = menu[item]
        order_total += price
        items_ordered.append(item)
        print(f"Added {item} ($ {price:.2f}). Current total: ${order_total:.2f}")
    else:
        print("Item not on menu, please try again.")

print("-" * 20)
print(f"Final Total: ${order_total:.2f}")
print("Thank you!")