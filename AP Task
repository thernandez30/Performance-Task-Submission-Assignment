import random

# Empty list to store the user's name.
names = []
# Empty list to store user's name and order.
my_list = []

def bakery_info(user_name):
    print(f"Hello, {user_name}! Welcome to Yummy Fanata Bakery!")
    bakery_options = int(input(
        "What would you like to order today? Enter 1-4.\n"
        "1.) 4 cookies\n"
        "2.) 2 cinnamon rolls\n"
        "3.) 4 Macarons\n"
        "4.) 1 Pastry of the day\n"
    ))

    # Selection to determine which menu item the user wants.
    order_item = ""
    if bakery_options == 1:
        cookies = int(input("You chose cookies! Choose a flavor 1-2. \n1.) Macadamia nut \n2.) Chocolate chip\n"))
        if cookies == 1:
            order_item = "Macadamia nut cookies"
        elif cookies == 2:
            order_item = "Chocolate chip cookies"
        else:
            print("That's not an option! Try again.\n")
            return
        print(f"You chose {order_item}! The cost is $8.00.")

    elif bakery_options == 2:
        order_item = "Cinnamon rolls"
        print(f"You chose {order_item}! The cost is $10.00.")

    elif bakery_options == 3:
        macarons = int(input("You chose macarons! Choose a flavor 1-3. \n1.) Pistachio\n2.) Lemon\n3.) Raspberry\n"))
        if macarons == 1:
            order_item = "Pistachio macarons"
        elif macarons == 2:
            order_item = "Lemon macarons"
        elif macarons == 3:
            order_item = "Raspberry macarons"
        else:
            print("That's not an option! Try again.")
            return
        print(f"You chose {order_item}! The cost is $9.00.")

    elif bakery_options == 4:
        flavors_list = ['strawberry cheesecake slice', 'lemon meringue tart slice', 'apple strudel', 'cherry baklava', 'coconut cake slice', 'vanilla custard donut', 'blueberry pie slice']
        random_flavor = random.choice(flavors_list)
        order_item = f"Pastry of the day: {random_flavor}"
        print(f"Our pastry of the day is randomized! Today it's a {random_flavor}. The cost is $12.00.")
    
    else:
        print("That's not an option! Try again.")
        return

    print("-" * 30)
    # Append user and their order to the main list
    my_list.append((user_name, order_item))

# Loop to ensure that the user can order multiple menu items.
while True:
    name = input("Please enter your name, or enter 'done' to finish: ")
    if name.lower() == 'done':
        # Final output of the user's name and menu item(s).
        print(f"\nOkay, you're ready to go! Here is what was ordered:\n{my_list}")
        break
    
    # Call function with user name
    bakery_info(name)
